# Django Production Settings
DEBUG=False
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_RANDOM_KEY
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database - PostgreSQL Production
DATABASE_URL=postgresql://ganglioside_user:CHANGE_PASSWORD@localhost:5432/ganglioside_prod

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Analysis Settings
DEFAULT_R2_THRESHOLD=0.75
DEFAULT_OUTLIER_THRESHOLD=2.5
DEFAULT_RT_TOLERANCE=0.1

# File Upload
MAX_UPLOAD_SIZE=52428800

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Sentry Error Tracking (optional)
SENTRY_DSN=

# Static Files
STATIC_ROOT=/var/www/ganglioside/static/
MEDIA_ROOT=/var/www/ganglioside/media/

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
