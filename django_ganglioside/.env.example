# Django Ganglioside Analysis Platform - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# SECURITY - REQUIRED
# =============================================================================

# Django Secret Key (REQUIRED - no default for security)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-immediately

# PostgreSQL Database Password (REQUIRED - no default for security)
# Use a strong password (at least 20 characters, mix of letters, numbers, symbols)
POSTGRES_PASSWORD=your-strong-database-password-here

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Debug mode (NEVER set to True in production)
DEBUG=False

# Django settings module
DJANGO_SETTINGS_MODULE=config.settings.production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# DATABASE
# =============================================================================

# Database URL (for production)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://ganglioside_user:${POSTGRES_PASSWORD}@postgres:5432/ganglioside_prod

# =============================================================================
# REDIS & CELERY
# =============================================================================

REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed CORS origins (comma-separated, no spaces)
# Example: http://localhost:3000,https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# FILE UPLOAD
# =============================================================================

# Max upload size in bytes (default: 50MB)
MAX_UPLOAD_SIZE=52428800

# =============================================================================
# ANALYSIS DEFAULTS
# =============================================================================

# Default RÂ² threshold for regression validation
DEFAULT_R2_THRESHOLD=0.75

# Default outlier threshold (standard deviations)
DEFAULT_OUTLIER_THRESHOLD=2.5

# Default RT tolerance for fragmentation detection (minutes)
DEFAULT_RT_TOLERANCE=0.1

# =============================================================================
# LOGGING
# =============================================================================

# Django log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL - PRODUCTION DEPLOYMENT
# =============================================================================

# SSL/HTTPS (uncomment for production)
# SECURE_SSL_REDIRECT=True
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Email settings (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Sentry error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here
